<div class="container">
    <form action="/boat/newAddImage" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Preis/h</label>
                <input type="number" class="form-control" min="0" max="200" value="20" step="1" name="price"  required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" maxlength="512" class="form-control" size="40" name="description" placeholder="Beschreibung" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Zustand</label>
                <input type="text" class="form-control" maxlength="20" name="condition" placeholder="Zustand" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Details</label>
                <input type="text" maxlength="512" class="form-control" size="40" name="details" placeholder="Details" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">Kategorie</label>
             <select class="form-select" name="category">
            <% categories.forEach(function(category){ %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
            </select>
        </div>
        <button type="submit" class="blue-button mt-4" aria-label="Bild hinzuf端gen">Bild Hinzuf端gen</button>
        <a class="blue-button mt-4" href="/welcome" aria-label="Zur端ck">Zur端ck</a>
    </form>
</div>