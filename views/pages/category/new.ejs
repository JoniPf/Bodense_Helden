<div class="container">
    <form action="/category" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" name="name" maxlength="20" value="<%= name %>">
            </div>
        </div>
        <button type="submit" class="blue-button mt-4">Hinzufügen</button>
        <a class="blue-button mt-4" href="/category">Zurück</a>
    </form>
</div>