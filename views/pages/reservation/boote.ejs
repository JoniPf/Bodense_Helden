<div class="container">
    <h1>Boote</h1>

    <div>
        <table class="table">
            <tbody>
                <% categories.forEach(function(category){ %>
                    <tr>
                        <td colspan="3" class="h4">
                            <%= category.name %> <BR>
                        </td>
                    </tr>
                    <% if (category.boats) { %>
                    <% category.boats.forEach(function(boote){ %>
                        <tr>
                            <td class="h6">
                                <%= boote.name %> <BR>
                                <span class="h7"><%= boote.condition %></span>
                            </td>
                            <td class="h6">
                                <%= boote.price %> &euro;
                            </td>
                            <td>
                                <a class="badge badge-primary" href="/shoppingbasket/put/<%= boote.id %>" aria-label="Reservieren">Reservieren</a>
                            </td>
                            <td>
                                <a class="badge badge-primary" href="/showboat/<%= boote.id %>" aria-label="Details">Details</a>
                            </td>
                        </tr>
                        <% }); %>
                        <% } %>
                    <% }); %>
            </tbody>
        </table>
        <% if(req.session.basket && req.session.basket.length> 0){ %>
            <a class="btn btn-primary" href="/reservation/step1" aria-label="Reservierung abschließen">Reservierung abschliessen</a></li>
        <% } %>
    </div>
    <a class="blue-button mt-4" href="/welcome" aria-label="Zurück">Zurück</a>
</div>